{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Compilar Tudo",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "compile.ps1"
      ],
      "problemMatcher": [
        "$javac"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "Executar Main",
      "type": "shell",
      "command": "java",
      "args": [
        "-cp",
        "bin",
        "loja.app.Main"
      ],
      "dependsOn": "Compilar Tudo",
      "group": "test"
    }
  ]
}
